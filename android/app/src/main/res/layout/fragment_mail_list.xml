<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_bottom_1px_graydark"
        >
        <ImageView
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:src="@drawable/ic_left_arrow"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/mailbox_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:text="收件箱"
                android:textSize="16dp"
                android:textColor="#050505"
                ></TextView>
            <TextView
                android:id="@+id/mail_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:text="(3)"
                android:textSize="16dp"
                android:textColor="#050505"
                ></TextView>
        </LinearLayout>


        <ImageView
            android:id="@+id/button_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:src="@drawable/ic_edit"></ImageView>
    </LinearLayout>
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/ptr_frame"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:ptr_resistance="1.7"
        app:ptr_ratio_of_header_height_to_refresh="1.2"
        app:ptr_keep_header_when_refresh="true"
        app:ptr_duration_to_close_header="250"
        >
<!--        <androidx.core.widget.NestedScrollView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent">-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mail_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
<!--        </androidx.core.widget.NestedScrollView>-->
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        android:gravity="center"
        >
        <ProgressBar
            android:id="@+id/loading_anim"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminate="false"
            android:indeterminateBehavior="repeat"
            android:indeterminateDuration="500"
            android:indeterminateDrawable="@drawable/loading">
        </ProgressBar>
        <TextView
            android:id="@+id/no_mail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="没有邮件"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="16dp"></TextView>
    </LinearLayout>

</RelativeLayout>